[Unit]
Description=DayMind Fava Ledger UI
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/daymind
EnvironmentFile=/etc/default/daymind
ExecStartPre=/usr/bin/test -x /opt/daymind/venv/bin/fava
User=daymind
Group=daymind
ExecStart=/opt/daymind/scripts/start_fava.sh
Restart=always
RestartSec=2
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
